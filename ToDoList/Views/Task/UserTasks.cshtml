<h2>My Tasks</h2>

<a asp-action="Create" class="btn btn-success" asp-route-userId="@User.FindFirst("UserId").Value">Add New Task</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @foreach (var task in Model)
        {
            <tr>
                <td>@index</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    @if (task.IsCompleted)
                    {
                        <span class="text-success">Completed</span>
                    }
                    else
                    {
                        <span class="text-danger">Not Completed</span>
                    }
                </td>
                <td>
                    <!-- Тук добавяме бутона за смяна на статуса на задачата -->
                    <form asp-action="ToggleStatus" asp-route-id="@task.Id" method="post">
                        <button type="submit" class="btn btn-primary">
                            @(task.IsCompleted ? "Mark as Incomplete" : "Mark as Complete")
                        </button>
                    </form>

                    <!-- Бутони за редакция и изтриване на задачата -->
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {
                index++;
            }
        }
    </tbody>
</table>