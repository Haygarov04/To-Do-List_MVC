@model ToDoList.Models.ToDoTask

<h2>Delete Task</h2>

<div>
    <h3>Are you sure you want to delete this task?</h3>
    <p>
        <strong>Title:</strong> @Model.Title <br />
        <strong>Description:</strong> @Model.Description <br />
        <strong>Is Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")
    </p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="UserTasks" asp-route-userId="@Model.UserId" class="btn btn-secondary">Cancel</a>
</form>