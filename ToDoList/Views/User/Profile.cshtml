@model ToDoList.Models.User

<h2>Your Profile</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Profile Details</h5>
        <p class="card-text"><strong>Username:</strong> @Model.Username</p>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role</p>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
    </div>
</div>